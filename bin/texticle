#!/usr/bin/env ruby
# Id$ nonnax 2022-11-23 12:45:54
$LOAD_PATH<<'./lib'

f,full=ARGV
mod = full ? 'texticle/texticle' : 'texticle/texticle_one'
require mod

unless f
  puts "file not found."
  puts "usage: #{File.basename(__FILE__)} <file> <any-optional-flag>"
  puts "<any-optional-flag> allows string interpolation"
else
  Texticle.render(f).then(&method(:puts))
end
