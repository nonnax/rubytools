#!/usr/bin/env ruby
# Id$ nonnax 2021-11-23 12:45:47 +0800
require 'rubytools/editor'
require 'math/math_ext'
require 'df/df_ext'
using DFExt
using MathExt

tmp='/tmp/eval.rb'

File
.edit( tmp )
.then{ |code| eval code }
.then{ |s| String(s).split("\n") }
.map{ |s| ['# ', s].join }
.join("\n")
.then{|s| File.write tmp, s, mode: 'a'}
.then{|s| File.write tmp, "\n", mode: 'a'}
